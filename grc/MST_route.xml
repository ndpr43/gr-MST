<?xml version="1.0"?>
<block>
  <name>Route</name>
  <key>MST_route</key>
  <category>MST</category>
  <import>import MST</import>
  <make>MST.route($routing, $repair)</make>
  <param>
    <name>Routing</name>
    <key>routing</key>
    <type>string</type>
    <option>
    	<name>AODV</name>
    	<key>AODV</key>
    </option>
  </param>
  <param>
    <name>Repair</name>
    <key>repair</key>
    <type>enum</type>
    <option>
    	<name>Enabled</name>
    	<key>True</key>
    </option>
    <option>
    	<name>Disabled</name>
    	<key>False</key>
    </option>
  </param>
  <sink>
    <name>from_host</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>from_mac</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>to_host</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>to_mac</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>to_mac_arq</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
