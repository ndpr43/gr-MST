<?xml version="1.0"?>
<block>
  <name>Route</name>
  <key>MST_route</key>
  <category>MST</category>
  <import>import MST</import>
  <make>MST.route($routing,
  				  $hostIp,
                  $repair, 
                  $ack, 
                  $destOnly, 
                  $gratutiousRrep, 
                  $rreqRetries, 
                  $ttlThreshold, 
                  $ttlIncrement, 
                  $ttlMax, 
                  $ttlStart, 
                  $netDiameter, 
                  $nodeTraversalTime, 
                  $activeRouteTimeout)</make>
  <param>
    <name>Routing</name>
    <key>routing</key>
    <type>string</type>
    <option>
    	<name>NONE</name>
    	<key>NONE</key>
    </option>
    <option>
    	<name>AODV</name>
    	<key>AODV</key>
    </option>
  </param>
  <param>
    <name>Route Repair</name>
    <key>repair</key>
    <type>enum</type>
    <option>
    	<name>Disabled</name>
    	<key>False</key>
    </option>
    <option>
    	<name>Enabled</name>
    	<key>True</key>
    </option>
  </param>
  <param>
    <name>Route Acknowledgement</name>
    <key>ack</key>
    <type>enum</type>
    <option>
        <name>Disabled</name>
    	<key>False</key>
    </option>
    <option>
		<name>Enabled</name>
    	<key>True</key>
    </option>
  </param>
  <param>
    <name>Destination Only</name>
    <key>destOnly</key>
    <type>enum</type>
    <option>
    	<name>Enabled</name>
    	<key>True</key>
    </option>
    <option>
    	<name>Disabled</name>
    	<key>False</key>
    </option>
  </param>
  <param>
    <name>Gratutious RREP</name>
    <key>gratutiousRrep</key>
    <type>enum</type>
    <option>
    	<name>Enabled</name>
    	<key>True</key>
    </option>
    <option>
    	<name>Disabled</name>
    	<key>False</key>
    </option>
  </param>
  <param>
	  <name>IP Address</name>
	  <key>hostIp</key>
	  <value>192.168.1.1</value>
	  <type>string</type>
  </param>
  <param>
	  <name>Maximum RREQ Retries</name>
	  <key>rreqRetries</key>
	  <value>10</value>
	  <type>int</type>
  </param>
  <param>
	  <name>Initial TTL</name>
	  <key>ttlStart</key>
	  <value>8</value>
	  <type>int</type>
  </param>
  <param>
	  <name>TTL Threshold</name>
	  <key>ttlThreshold</key>
	  <value>16</value>
	  <type>int</type>
  </param>
  <param>
	  <name>TTL Increment</name>
	  <key>ttlIncrement</key>
	  <value>1</value>
	  <type>int</type>
  </param>
  <param>
	  <name>Maximum TTL</name>
	  <key>ttlMax</key>
	  <value>255</value>
	  <type>int</type>
  </param>
  <param>
	  <name>Net Diameter</name>
	  <key>netDiameter</key>
	  <value>16</value>
	  <type>int</type>
  </param>
  <param>
	  <name>Node Traversal Time (ms)</name>
	  <key>nodeTraversalTime</key>
	  <value>10</value>
	  <type>int</type>
  </param>
  <param>
	  <name>Active Route Timeout (ms)</name>
	  <key>activeRouteTimeout</key>
	  <value>3000</value>
	  <type>int</type>
  </param>
  <sink>
    <name>from_host</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>from_mac</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>to_host</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>to_mac</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
